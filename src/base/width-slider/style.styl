.slide-enter
  transform: translateX(100%)
.slide-enter-active
  transform: translateX(0)
  transition: all 300ms ease-in-out
.slide-exit
  transform: translateX(0)
.slide-exit-active
  transform: translateX(100%)
  transition: all 300ms ease-in
.a
  position fixed
  left 0
  right 0
  top 0
  bottom 0