@import "~common/stylus/variable"
  .listview
    position: relative
    width: 100%
    height: 100%
    overflow: hidden
    background: $color-bg
    .list-group
      padding-bottom: 15px
      .list-group-title
        height: 30px
        line-height: 30px
        padding-left: 20px
        font-size: $font-size-medium
      .list-group-item
        display: flex
        align-items: center
        padding: 15px 0 0 20px
        .avatar
          width: 35px
          height: 35px
          border-radius: 50%
        .name
          margin-left: 20px
          font-size: $font-size-medium
    .list-shortcut
      position: absolute
      right: 0
      top: 50%
      transform: translateY(-50%)
      width: 20px
      padding: 20px 0
      border-radius: 10px
      text-align: center
      font-family: Helvetica
      .item
        padding: 3px
        line-height: 1
        font-size: $font-size-small
        &.current
          color: $color-theme
    .list-fixed
      position: absolute
      top: 0
      left: 0
      width: 100%
      .fixed-title
        height: 30px
        line-height: 30px
        padding-left: 20px
        font-size: $font-size-medium
        background: rgba(0, 0, 0, .1)
    .loading-container
      position: absolute
      width: 100%
      top: 50%
      transform: translateY(-50%)