.player-icon
  height 20px
  width 20px
  display flex
  justify-content space-between
  align-items flex-end
  .item
    width 2px
    background #333333
    &.item-1
      height 20px
      animation item-1 .8s infinite
    &.item-2
      height 15px
      animation item-2 .8s infinite
    &.item-3
      height 18px
      animation item-3 .8s infinite
    &.item-4
      height 10px
      animation item-4 .8s infinite
    &.paused
      animation-play-state paused
@keyframes item-1
  0%
    height 20px
  50%
    height 10px
  100%
    height 20px

@keyframes item-2
  0%
    height 15px
  50%
    height 20px
  100%
    height 15px

@keyframes item-3
  0%
    height 18px
  50%
    height 10px
  100%
    height 18px

@keyframes item-4
  0%
    height 10px
  50%
    height 15px
  100%
    height 10px
