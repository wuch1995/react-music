@import '~common/stylus/variable.styl'

.recommend
  position fixed
  width 100%
  top 84px
  bottom 0
  background $color-bg
  .recommend-content
    height 100%
    overflow hidden
    .slider-wrapper
      position relative
      padding 0 20px
      overflow hidden
    .recommend-list
      .list-title
        height 55px
        padding-left 18px
        line-height 55px
        font-size $font-size-larger
        font-size 800
      .item
        display flex
        box-sizing border-box
        align-items center
        padding 0 20px 20px 20px
        .icon
          flex 0 0 60px
          width 60px
          padding-right 20px
        .text
          display flex
          flex-direction column
          justify-content center
          flex 1
          line-height 20px
          overflow hidden
          font-size $font-size-medium
          .name
            margin-bottom 10px





