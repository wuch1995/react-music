.singer
  position: fixed
  top: 88px
  bottom: 0
  width: 100%
.slider-enter
  transform: translateX(100%)
  -webkit-transform: translateX(100%)
.slider-enter-active
  transform: translateX(0)
  -webkit-transform: translateX(0)
  transition: all 250ms ease-in-out
.slider-exit
  transform: translateX(0)
  -webkit-transform: translateX(0)
.slider-exit-active
  transform: translateX(100%)
  -webkit-transform: translateX(100%)
  transition: all 250ms ease-in